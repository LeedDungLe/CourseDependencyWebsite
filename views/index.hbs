<div class="header" id="header-container">
      <img src="Logo_Hust.png" style="margin: 6px 30px 6px 20px;">
      <h1>Tra cứu học phần môn học trường Đại học Bách Khoa Hà Nội</h1>
      <div id="login">
         <button  id="loginBtn" >Đăng nhập</button>
      </div>
</div>

      <div class="login_form_popup" id="loginForm">
         <form action="/login" class="form-container">
            <h1>Login</h1>

            <label for="email"><b>Username</b></label>
            <input type="text" placeholder="Enter username" name="username" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required>

            <button type="submit" class="btn">Login</button>
            <button type="button" class="btn cancel" id="closeLoginFormBtn">Close</button>
         </form>
      </div>

<div class="container" id="body-container">
   <div class="input_container">
      <h3>Nhập mã học phần tại đây</h3>
      <form method="POST" action="/" class="form_input">
         <input  type="text" name="task_id" id="task" placeholder="tìm kiếm..." required>
         <button type="submit" id="submit">Tra cứu</button>
      </form>
   </div>
   <div>
         {{#if showDetail}}
            {{#if isExist}}
               <div id="info_container">
                  <div class="info_detail">
                     <a>Mã học phần: </a> <div id="moduleCode">{{moduleCode}}</div><br><br>
                     <a>Tên học phần: </a><br>{{moduleName}}<br><br>
                     <a>Thời lượng: </a>{{Duration}}<br><br>
                     <a>Số tín chỉ: </a>{{NumberOfCredits}}<br><br>
                     <a>Tín chỉ học phí: </a>{{TCTuitionFees}}<br><br>
                     <a>Trọng số: </a>{{Weighting}}<br><br>
                     <a>Viện quản lý: </a><br>{{FactorManagementInstitute}}<br><br>
                     <a>Mục tiêu: </a><br>{{goal}}<br><br>
                     <a>Nội dung: </a><br>{{content}}<br><br>
                     <a>Môn này có thể cần cho </a><b>{{countDep}}</b><a> môn khác</a><br><br>
                     {{#if needPreCondition}}
                        <a>Học phần điều kiện: </a><br>{{conditonModule}}<br><br>
                        {{#if isRequire}}
                           <br><a style="color: red;"><b>Chú ý, để học được học phần này, bạn phải học:</b></a><br>
                           {{#if requirement.preCourseLst}}
                              <a>Học phần điều kiện: </a> 
                              {{#each requirement.preCourseLst}}
                                   <a href="/{{this}}">{{this}}</a> 
                              {{/each}}
                              <br>
                           {{/if}} 
                           {{#if requirement.prerequite}}  
                              <a>Học phần tiên quyết: </a> 
                              {{#each requirement.prerequite}}
                                   <a href="/{{this}}">{{this}}</a> 
                              {{/each}}
                              <br>
                           {{/if}} 
                           {{#if requirement.corequisite}}
                              <a>Học phần song song: </a>  
                              {{#each requirement.corequisite}}
                                   <a href="/{{this}}">{{this}}</a> 
                              {{/each}}
                              <br>
                           {{/if}} 
                           <br><br>
                        {{else}}
                           <br>
                        {{/if}}
                     {{else}}  
                           <a> Học phần này không có học phần điều kiện nào</a>
                     {{/if}}
                  </div>
                  <div class="info_image">
                        <a href="{{srcText}}" target="_blank">
                           <img id="myimage" src='{{srcText}}' width="850" height="300"  alt="Sơ đồ môn học điều kiện, nếu không thấy thì link đến ảnh bị lỗi rồi">
                        </a>
                        <div style="display:flex;padding-top:20px">
                           <div style = "width: 500px;">
                           {{#if hasSubImage}}
                              <div  id="subImgInfo">  
                                 <a><b>Các học phần cần học để có tổng tín chị học phí thấp nhất</b></a>
                                 <br><br>
                                 <img id="subImage" src='{{filePath}}'>
                              </div>
                           {{/if}}
                           </div>
                           <div id="myresult" class="img-zoom-result"></div>
                        </div>                 
                  </div>
               </div>
               <div class="container user-interaction">
                  <a>Gợi ý từ mọi người về môn học này</a>
                  <div class="recommend-content"></div>
                  <br>
                  <div> Ý kiến của bạn </div>
                  <div class="recommend_input">
                     <input  type="text" maxlength="15" placeholder="Nhập MSSV vào đây..." id="my-name">
                     <div style="display:flex;flex-direction:row">
                        <input  type="text" maxlength="150" id="my-recommend" placeholder="Nhập nội dung vào đây..." required>
                        <button class ="my_recommend_btn" id="sendCommentBtn">Gửi</button>
                     </div>
                  </div>
               </div>
            {{else}}
               <a>Mã học phần này không tồn tại</a>
            {{/if}}
         {{/if}}
   </div>
</div>

<div class="footer" id="footer-container">
   <div class="source_info">
      <a>* Dữ liệu được lấy từ trang  </a> <b></b><a href="https://https://ctt-sis.hust.edu.vn/" target="_blank"> CTT</a></b>
   </div>   
</div>

